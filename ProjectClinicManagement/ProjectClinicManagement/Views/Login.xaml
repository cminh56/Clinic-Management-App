<Window x:Class="ProjectClinicManagement.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectClinicManagement.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="151,161,0,0" VerticalAlignment="Top" Width="120" PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBox HorizontalAlignment="Left" Margin="151,104,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="120"/>
        <Button Command="{Binding LoginCommand}" Content="Login" HorizontalAlignment="Left" Margin="211,217,0,0" VerticalAlignment="Top" />

    </Grid>
</Window>
