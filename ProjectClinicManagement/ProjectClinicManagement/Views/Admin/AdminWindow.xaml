<Window x:Class="ProjectClinicManagement.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectClinicManagement.Views.Admin"
        xmlns:vm="clr-namespace:ProjectClinicManagement.ViewModel.AdminViewModel"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:AdminNavigationVM />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="630" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top"  Width="228">
            <Button Content="Go to Page 1" Command="{Binding NavigateToPage1Command}" Margin="10"/>
            <Button Content="Go to Page 2" Command="{Binding NavigateToPage2Command}"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
